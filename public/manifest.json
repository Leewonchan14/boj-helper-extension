{
  "manifest_version": 3,
  "name": "boj-helper-extension",
  "description": "백준 문제 풀이시 백준 풀이로 넘어가는 버튼을 만들어주는 확장프로그램",
  "version": "0.1",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://boj-helper.vercel.app/*"],
      "js": ["helper.js"]
    },
    {
      "matches": ["https://www.acmicpc.net/solve/*"],
      "js": ["solve.js"],
      "png": ["favicon.png"]
    },
    {
      "matches": ["https://www.acmicpc.net/submit/*"],
      "js": ["submit.js"],
      "png": ["favicon.png"]
    },
    {
      "matches": ["https://www.acmicpc.net/problem/*"],
      "js": ["problem.js"],
      "png": ["favicon.png"]
    }
  ],
  "action": {
    "default_icon": "favicon.png"
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
